<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity">

    <ImageView
        android:id="@+id/appLogoResults"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:contentDescription="@string/app_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/anaemia_detection_logo" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_home_button"
        android:fontFamily="@font/kadwa_bold"
        android:text="@string/app_home_button"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:backgroundTint="#caf55f"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsClassEditText" />

    <TextView
        android:id="@+id/resultsInstructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kadwa_bold"
        android:text="@string/app_results_instruction_uppercase"
        android:textColor="#004763"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultsNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kadwa_bold"
        android:text="@string/app_results_name"
        android:textColor="#ed1b24"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsInstructionText" />

    <EditText
        android:id="@+id/resultsNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/kadwa_bold"
        android:inputType="none"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/resultsSymptomsText"
        app:layout_constraintTop_toBottomOf="@+id/resultsInstructionText" />

    <TextView
        android:id="@+id/resultsAgeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kadwa_bold"
        android:text="@string/app_results_age"
        android:textColor="#ed1b24"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsNameEditText" />

    <EditText
        android:id="@+id/resultsAgeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/kadwa_bold"
        android:inputType="none"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/resultsSymptomsText"
        app:layout_constraintTop_toBottomOf="@+id/resultsNameEditText" />

    <TextView
        android:id="@+id/resultsGenderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kadwa_bold"
        android:text="@string/app_results_gender"
        android:textColor="#ed1b24"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsAgeEditText" />

    <EditText
        android:id="@+id/resultsGenderEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/kadwa_bold"
        android:inputType="none"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/resultsSymptomsText"
        app:layout_constraintTop_toBottomOf="@+id/resultsAgeEditText" />

    <TextView
        android:id="@+id/resultsSymptomsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kadwa_bold"
        android:text="@string/app_results_symptoms"
        android:textColor="#ed1b24"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsGenderEditText" />

    <EditText
        android:id="@+id/resultsSymptomsEditTextMultiLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/kadwa_bold"
        android:gravity="start|top"
        android:inputType="none"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/resultsSymptomsText"
        app:layout_constraintTop_toBottomOf="@+id/resultsGenderEditText" />

    <TextView
        android:id="@+id/resultsYouAreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/kadwa_bold"
        android:text="@string/app_results_you_are"
        android:textColor="#004763"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsSymptomsEditTextMultiLine" />

    <EditText
        android:id="@+id/resultsPercentageEditText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/kadwa_bold"
        android:gravity="center"
        android:inputType="none"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsYouAreText" />

    <EditText
        android:id="@+id/resultsClassEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/kadwa_bold"
        android:gravity="center"
        android:inputType="none"
        android:textColor="#ed1b24"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsPercentageEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>